    <script>
        // Counter Animation
        function animateCounter(element, target, suffix = '') {
            let current = 0;
            const increment = target / 100;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = Math.round(target) + suffix;
                    clearInterval(timer);
                } else {
                    element.textContent = Math.round(current) + suffix;
                }
            }, 20);
        }

        // Initialize counters when impact section is visible
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateCounter(document.getElementById('repas-counter'), 125847);
                    animateCounter(document.getElementById('co2-counter'), 254, 'T');
                    animateCounter(document.getElementById('dechets-counter'), 189, 'T');
                    animateCounter(document.getElementById('personnes-counter'), 38642);
                    observer.unobserve(entry.target);
                }
            });
        });

        observer.observe(document.querySelector('.impact-section'));

        // Profile Selection
        function selectProfile(profile) {
            // Hide all dashboards
            document.querySelectorAll('.dashboard').forEach(d => d.classList.remove('active'));
            
            // Hide home sections
            document.getElementById('home').style.display = 'none';
            document.getElementById('profiles').style.display = 'none';
            document.getElementById('impact').style.display = 'none';
            
            // Show selected dashboard
            document.getElementById(`dashboard-${profile}`).classList.add('active');
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            showToast(`Bienvenue dans votre espace ${profile} !`);
        }

        // Show Home
        function showHome() {
            document.querySelectorAll('.dashboard').forEach(d => d.classList.remove('active'));
            document.getElementById('home').style.display = 'block';
            document.getElementById('profiles').style.display = 'block';
            document.getElementById('impact').style.display = 'block';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Scroll functions
        function scrollToProfiles() {
            document.getElementById('profiles').scrollIntoView({ behavior: 'smooth' });
        }

        function scrollToImpact() {
            document.getElementById('impact').scrollIntoView({ behavior: 'smooth' });
        }

        // Toast Notification
        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideInRight 0.5s ease-out reverse';
                setTimeout(() => toast.remove(), 500);
            }, 3000);
        }

        // Reserve Product
        function reserveProduct(product) {
            showToast(`‚úÖ ${product} r√©serv√© avec succ√®s ! Instructions de collecte envoy√©es.`);
        }

        // Add Product
        function addProduct(event) {
            event.preventDefault();
            showToast('‚úÖ Surplus publi√© avec succ√®s ! L\'IA recherche les b√©n√©ficiaires appropri√©s...');
            event.target.reset();
        }

        // Smooth scroll for all internal links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
